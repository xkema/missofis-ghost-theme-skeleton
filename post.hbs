{{!< default}}

{{! single post layout }}
{{#post}}
	<div class="container post-content">
		<div class="row">
			<div class="twelve columns">
				{{! post content }}
				<article class="{{post_class}}">
					<header>
						<h1>{{{title}}}</h1>
					</header>
					<section>
						{{content}}
					</section>
					<footer>
						{{author}}
					</footer>
				</article>
			</div>
		</div>
	</div>
{{/post}}


	

	