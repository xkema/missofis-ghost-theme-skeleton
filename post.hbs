{{!< default}}

{{! single post layout }}
{{#post}}

{{! post featured header }}
<header class="u-full-width nttld--content-header">

	{{#if image}}
	<div class="nttld--cover-holder" style="background-image: url({{image}})">&nbsp;</div>
	{{/if}}
	<div class="nttld--cover-info {{^if image}}nttld--no-cover{{/if}}">
		<div class="container">
			<div class="row">
				<div class="twelve columns">
					<span>
						<i class="fa fa-asterisk" title="{{title}}"></i>
					</span>
				</div>
			</div>
		</div>
	</div>
	
</header>

{{! single post content }}
<main class="u-full-width" role="main">
	<div class="container">
		<div class="row">
			<div class="twelve columns">
				<article class="{{post_class}}">
					<header class="nttld--post-header nttld--meta-header">
						<h1 class="nttld--post-title">{{{title}}}</h1>
						<div class="nttld--post-meta nttld--meta-text">
							<span><i class="fa fa-calendar"></i> <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time></span>
							{{#if tags}}
							&nbsp;
							<span class="nttld--post-tags">
								<i class="fa fa-tags"></i>
								{{tags}}
							</span>
							{{/if}}
							</span>
						</div>
					</header>
					<section class="nttld--post-content">
						{{content}}
					</section>
					<footer class="nttld--post-footer">
						<hr>
						<div class="nttld--post-share">
							<h5>Share this post</h5>
							<div class="nttld--post-share-links">
								{{> "share" }}
							</div>
						</div>
						<hr>
						<div class="nttld--post-author nttld--info-box">
							{{#author}}
							<div class="nttld--post-author-image">
								{{#if image}}
								<img src="{{image}}" alt="{{name}}" class="u-full-width" title="{{name}}">
								{{else}}
								<i class="fa fa-user fa-5x" title="{{name}}"></i>
								{{/if}}
							</div>
							<h5>{{name}}</h5>
							<span class="nttld--author-meta nttld--meta-text">
								{{#if location}}
								<i class="fa fa-map-marker"></i> {{location}} &nbsp;
								{{/if}}
								<br>
								{{#if website}}
								<i class="fa fa-link"></i> <a href="{{website}}" target="_blank">{{website}}</a>
								{{/if}}
							</span>
							{{#if bio}}
							<p><small>{{bio}}</small></p>
							{{/if}}
							<a href="{{url}}" title="See all posts from {{name}}" class="button">Author's Page</a>
							{{/author}}
						</div>
					</footer>
				</article>
			</div>
		</div>
	</div>
</main>

{{/post}}