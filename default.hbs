<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		
		<title>{{meta_title}}</title>
		<meta name="description" content="{{meta_description}}">

        <meta name="viewport" content="width=device-width, initial-scale=1">

        {{! <link rel="apple-touch-icon" href="apple-touch-icon.png"> }}
        <!-- Place favicon.ico in the root directory -->
		
		{{! skeleton styles }}
        <link rel="stylesheet" href="{{asset "css/skeleton/normalize.css"}}">
        <link rel="stylesheet" href="{{asset "css/skeleton/skeleton.css"}}">
        
		{{! theme styles }}
        <link rel="stylesheet" href="{{asset "css/screen.css"}}">
        <link rel="stylesheet" href="{{asset "css/custom.css"}}">
        <link rel="stylesheet" href="{{asset "css/custom.css"}}">

        {{! theme fonts from google webfonts }}
        {{> "webfonts"}}
		
		{{! make theme header hookable }}
        {{ghost_head}}
	</head>
	
	<body class="{{body_class}}">

		{{! blog navigation }}
        {{navigation}}

		{{! inject post/page specific content here }}
		{{{body}}}

		{{! theme footer }}
		{{> "footer" }}
	
		{{! make theme footer hookable }}
		{{ghost_foot}}
		
		{{! theme scripts }}
		<script src="{{asset "js/main.js"}}"></script>

		<!-- remove@production -->
		<script src="//localhost:35729/livereload.js"></script>
		<!-- endremove@production -->

	</body>
</html>