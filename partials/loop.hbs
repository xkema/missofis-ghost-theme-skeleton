{{! post loop }}
{{#foreach posts}}
	<div class="row">
		<div class="twelve columns">
			<article class="{{post_class}}">
				<header>
					<h1><a href="{{url}}">{{{title}}}</a></h1>
				</header>
				<section>
					<p>{{excerpt words="32"}} <a href="{{url}}">&raquo;</a></p>
				</section>
				<footer>
					{{author}}
				</footer>
			</article>
		</div>
	</div>
{{/foreach}}