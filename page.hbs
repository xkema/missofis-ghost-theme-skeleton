{{!< default}}

{{! page layout }}
{{#post}}

{{! post featured header }}
<header class="u-full-width post-featured-header">
	{{#if image}}
	<div class="cover-holder">
		<img src="{{image}}" alt="{{image}}">
	</div>
	{{else}}
	<div class="container">
		<div class="row">
			<div class="twelve columns">
				<span class="cover-holder-iconed">
					<i class="fa fa-chevron-down" title="{{title}}"></i>
				</span>
			</div>
		</div>
	</div>
	{{/if}}
</header>

{{! page content }}
<main class="u-full-width template-content" role="main">
	<div class="container">
		<div class="row">
			<div class="twelve columns">
				<article class="{{post_class}}">
					<header class="post-header">
						<h1 class="post-title">{{{title}}}</h1>
					</header>
					<section class="post-content">
						{{content}}
					</section>
				</article>
			</div>
		</div>		
	</div>
</main>

{{/post}}