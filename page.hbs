{{!< default}}

{{! page layout }}
{{#post}}

{{! page featured header }}
<header class="u-full-width nttld--content-header">

	{{#if image}}
	<div class="nttld--cover-holder" style="background-image: url({{image}})">&nbsp;</div>
	{{/if}}<div class="nttld--cover-info {{^if image}}nttld--no-cover{{/if}}">
		<div class="container">
			<div class="row">
				<div class="twelve columns">
					<span>
						<i class="fa fa-chevron-down" title="{{title}}"></i>
					</span>
				</div>
			</div>
		</div>
	</div>

</header>

{{! page content }}
<main class="u-full-width" role="main">
	<div class="container">
		<div class="row">
			<div class="twelve columns">
				<article class="{{post_class}}">
					<header class="nttld--post-header">
						<h1 class="nttld--post-title">{{{title}}}</h1>
					</header>
					<section class="nttld--post-content">
						{{content}}
					</section>
				</article>
			</div>
		</div>		
	</div>
</main>

{{/post}}